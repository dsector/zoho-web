{{#link-to 'proposal.loading' type="button" class="btn btn-primary"}}Generate PDF{{/link-to}}

<button href="#" data-toggle="modal" data-target=".bs-example-modal-lg" type="button" class="btn btn-danger">View
    Presentation
</button>

<div id="presentation-modal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog"
     aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">Ã—</span>
                </button>
                <h4 class="modal-title" id="myLargeModalLabel">Proposal Presentation
                    <a class="anchorjs-link" href="#myLargeModalLabel">
                        <span class="anchorjs-icon"></span>
                    </a>
                </h4>
            </div>
            <div class="modal-body">
                <h1>Current Electricity Use</h1>
              {{
              charts/barchart-potential
              chart-id="barchart-potfffff"
              firstCalendar=proposal.potential.utilityUsage.usageCalendar
              secondCalendar=proposal.potential.utilityUsage.billCalendar
              on-modal="#presentation-modal"
              }}
                <h1>Usage, Production & Saving Summary</h1>
              {{
              charts/piechart-potential
              chart-id="piechart-potential"
              on-modal="#presentation-modal"
              proposal=proposal
              }}
                <h1>Efficiency Saving</h1>
              {{
              charts/barchart-potential
              chart-id="barchart-dqwdqwd"
              firstCalendar=proposal.usageAfterEnergyAndSolar
              secondCalendar=proposal.usageAfterEnergyAndSolar
              on-modal="#presentation-modal"
              }}

                <h1>Why we are here</h1>

                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <td class="bold">Average Bill</td>
                        <td>{{ proposal.potential.averageBill }}</td>
                    </tr>
                    <tr>
                        <td class="bold">High Bill</td>
                        <td>{{ proposal.potential.utilityUsage.highElectricityBill }}</td>
                    </tr>
                    <tr>
                        <td class="bold">Annual Bill</td>
                        <td>{{ proposal.potential.utilityUsage.lowElectricityBill }}</td>
                    </tr>
                     <tr>
                        <td class="bold">25 Year Bill</td>
                        <td>{{ proposal.potential.twentyFiveTimesBill }}</td>
                    </tr>
                     <tr>
                        <td>Possible Inflation</td>
                        <td class="red-highlight">6-25% per year</td>
                    </tr>
                    </tbody>
                </table>
                <hr />
                <h1>Results <span class="pull-right">7,001 <span class="text-muted">kWh per Year *</span></span></h1>
