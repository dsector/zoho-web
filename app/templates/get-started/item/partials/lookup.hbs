{{#get-started-slider nextSlide="utility-data" action="setSlide" slideName="lookup"}}


    <div class="step-container">

      {{#widget-collspandable title="Select a market profile"}}
        {{view "select"
        content=marketProfiles
        optionLabelPath="content.name"
        value=proposal.marketProfile
        prompt="Please select a market profile"
        class="form-control"}}
      {{/widget-collspandable}}
    </div>


    <div class="step-container" id="potential-wrapper">
      {{#widget-collspandable title="Potential" widget-id="potential-widget"}}
        {{ proposal/view-table update="savePotentialToApi" model=model }}
      {{/widget-collspandable}}
    </div>

    <div class="step-container" id="some-wrapper">
      {{#widget-collspandable title="System Info" widget-id="system-info-widget" collapsed="true"}}
          <div>
              <form id="some-form">
                  <div class="form-group">
                      <label>DC System size</label>
                    {{input value=proposal.pvwatts.system_capacity class="form-control"}}
                  </div>
                  <div class="form-group">
                      <label>Module Type</label>
                    {{view "select"
                    content=moduleTypes
                    optionLabelPath="content.name"
                    optionValuePath="content.value"
                    value=proposal.pvwatts.module_type
                    class="form-control"
                    }}
                  </div>
                  <div class="form-group">
                      <label>Array Type</label>
                    {{view "select"
                    content=arrayTypes
                    optionLabelPath="content.name"
                    optionValuePath="content.value"
                    value=proposal.pvwatts.array_type
                    class="form-control"
                    }}
                  </div>
                  <div class="form-group">
                      <label>System Losses (%)</label>
                    {{input value=proposal.pvwatts.losses class="form-control"}}
                  </div>
                  <div class="form-group">
                      <label>Tilt</label>
                    {{input value=proposal.pvwatts.tilt class="form-control"}}
                  </div>
                  <div class="form-group">
                      <label>Azimuth</label>
                    {{input value=proposal.pvwatts.azimuth class="form-control"}}
                  </div>
              </form>
          </div>
      {{/widget-collspandable}}
    </div>

    <div class="step-container" id="some2-wrapper">
      {{#widget-collspandable title="Advanced Parameters" widget-id="system2-info-widget" collapsed="true"}}
          <div>
              <form id="some-form">
                  <div class="form-group">
                      <label>DC to AC size ratio</label>
                    {{input value=proposal.pvwatts.dc_ac_ratio class="form-control"}}
                  </div>
                  <div class="form-group">
                      <label>Inverter efficiency (%)</label>
                    {{input value=proposal.pvwatts.inv_eff class="form-control"}}
                  </div>
                  <div class="form-group">
                      <label for="price-per-watt">Ground Coverage Ratio</label>
                    {{input value=proposal.pvwatts.gcr class="form-control"}}
                  </div>
              </form>
          </div>
      {{/widget-collspandable}}
    </div>

    <div class="step-container" id="energy-wrapper">
      {{#widget-collspandable title="Energy Efficiency" widget-id="energy-efficiency-widget" collapsed="true"}}
        {{ proposal/energy-efficiency update="saveProposalToApi" proposal=proposal energy=energy }}
      {{/widget-collspandable}}
    </div>

    <div class="step-container" id="project-wrapper">
      {{#widget-collspandable title="Project Design" widget-id="project-design-widget" collapsed="true"}}
        {{proposal/project-design update="saveProposalToApi" project-design=project-design}}
      {{/widget-collspandable}}
    </div>

    {{outlet}}

{{/get-started-slider}}